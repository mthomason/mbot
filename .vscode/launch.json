	"version": "0.2.0",
	"configurations": [
		{
			"name": "Python: FastAPI",
			"type": "python",
			"request": "launch",
			"module": "uvicorn",
			"args": [
				"main:app",
				"--reload"
			],
			"jinja": true,
			"justMyCode": true,
			"cwd": "${workspaceFolder}/backend"
		},
		{
			"name": "Launch Vite App",
			"type": "node",
			"request": "launch",
			"runtimeExecutable": "npm",
			"runtimeArgs": [
				"run",
				"dev"
			],
			"cwd": "${workspaceFolder}/vite-app",
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		}
	],
	"compounds": [
		{
			"name": "Launch FastAPI and Vite",
			"configurations": ["Python: FastAPI", "Launch Vite App"]
		}
	]
}